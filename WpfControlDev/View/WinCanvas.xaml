<Window x:Class="WpfControlDev.View.WinCanvas"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfControlDev"
        mc:Ignorable="d"
        Title="WinCanvas" Height="300" Width="300">
    <Viewbox>
        <Canvas Width="300" Height="300">
            <Button Canvas.Left="10" Canvas.Top="10">(10,10)</Button>
            <Button Canvas.Left="120" Canvas.Top="30">(120,30)</Button>
            <!-- Panel.ZIndex="1" 值大显示在前面 -->
            <Button Canvas.Left="60" Canvas.Top="80" Panel.ZIndex="1" Width="50" Height="50">(60,80)</Button>
            <Button Canvas.Left="70" Canvas.Top="120" Width="100" Height="50">(70,120)</Button>
            <Button Canvas.Right="20" Canvas.Bottom="20" Width="70" Height="30">(-20,-20)</Button>
        </Canvas>
    </Viewbox>
</Window>
